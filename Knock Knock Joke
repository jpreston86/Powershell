clear-host

$userReply = ""

while ($userReply -ne "Who is there?"){
    $userReply = read-host "Knock Knock!"
    }
    
clear-host

while ($userReply -ne "Cash who"){
    $userReply = read-host "Cash."
    }
    
clear-host

write-output "No thanks, but I would like a peanut instead!"

start-sleep -second 5

